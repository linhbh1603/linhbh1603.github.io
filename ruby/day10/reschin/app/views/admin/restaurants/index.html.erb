<div class="col-md-12">
  <div class="pull-left"><h2> List Banners </h2></div>
  <div class="pull-right admin-new-btn">
    <%= link_to 'New Restaurant', new_admin_restaurants_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="col-md-12">
  <hr>
</div>

<div class="col-md-12">
  <table class="table table-hover">
    <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Image</th>
        <th>Description</th>
        <th>Actions</th>
    </thead>

    <tbody>
      <% @restaurant.each do |restaurant| %>
        <tr>
          <td>
            <%= restaurant.id %>
          </td>

          <td>
            <%= restaurant.name %>
          </td>

          
             <td>
              <%= image_tag restaurant.image ? restaurant.image : 'url image' , width: '100px', height: 'auto' %>
            </td> 
          

          <td>
            <%= restaurant.description %>
          </td>

          <td>
            <%= link_to 'View', admin_restaurant_path(restaurant), class: "btn btn-default" %>
            <%= link_to 'Edit', edit_admin_restaurant_path(restaurant), class: "btn btn-default" %>
            <%= link_to 'Destroy', admin_restaurant_path(restaurant), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
