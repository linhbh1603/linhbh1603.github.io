<%= form_for [:admin, @banner] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :image %>
    <%= f.text_field :image %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>

    <%= f.label :article %>
    <%= f.collection_select(
            :article_id,
            Article.all,
            :id,
            :title,
            {:prompt => 'Please select the Article of this Banner'})%>

    <br>

    <%= f.submit %>
<% end %>