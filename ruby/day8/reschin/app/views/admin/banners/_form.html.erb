<%= form_for [:admin, @banner] do |f| %>
  	<%= f.label :name %>
  	<%= f.text_field :name %>
	<br>
    <%= f.label :image %>
    <%= f.text_field :image %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    
    <%= f.collection_select(
    	:article_id,
    	Article.all,
    	:id,
    	:title,
    	{:prompt => 'Please select the Artitle of this Banner '}
    	                   )
    %>

    <br>

    <%= f.submit %>

<% end %>