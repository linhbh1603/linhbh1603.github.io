<div id="restaurant-container">
    <div id="restaurant-banner">
    </div>

    <div id="restaurant-info">
        <div class="container">
          <div class="row">
            <div class="col-md-2 col-md-offset-1 col-sm-2 col-sm-offset-1 col-xs-2 col-xs-offset-1">
                <%= image_tag (@restaurant.image ? @restaurant.image : 'sample-restaurant-img.jpg'), class: 'img img-rounded img-responsive restaurant-img-avatar' %>
            </div>

            <div class="col-md-8 col-sm-8 col-xs-8">
                <h2 class="restaurant-name"><%= @restaurant.name %></h2>
              <div class="restaurant-extra-info">
                <p>
                  Techmaster, Star City, Lê Văn Lương, Hà Nội
                </p>
                <p>
                  Open: 18:30 - 21:30
                </p>
                <p>
                  <span class="fa fa-mobile"></span>: 098666888
                </p>
              </div>


            </div>
          </div>
        </div>
    </div>

    <div id="restaurant-relevant" class="container">
      <div class="row">
        <div class="col-md-9">
          <div class="restaurant-comment">
            <div class="row">
                <div class="col-md-10">
                  <div class="like-number">
                    <i class="fa fa-heart"></i>
                  </div>
                  68 người thích cửa hàng này
                </div>


              <div class="col-md-2">
                <% if user_signed_in? %>
                    <button class="btn <%= @is_liked ? 'btn-danger': 'btn-primary' %>  pull-right" id="btn-like" restaurant-id="<%= @restaurant.id %>" >
                      Thích
                    </button>
                <% else %>
                    <%= link_to 'Thich', new_user_session_path, class: 'btn btn-primary' %>
                <% end %>

              </div>
            </div>

            <br>
            <div class="row">
              <div class="col-md-12">
                <i class="fa fa-comments"></i>
                86 bình luận
                <hr>
              </div>
              
              <div class="col-md-12 restaurant-comments-list">
                
                <% @comments.each do |c| %>
                  <%= render partial: 'comments/comment', 
                             locals: {comment: c}
                  %>
                <% end %>


              </div>

              <div class="col-md-12">
                <%= form_for @new_comment, remote: true, html: {id: 'new-comment'} do |f| %>

                  <%= f.text_area :content, class: 'form-control', rows: 5, disabled: !user_signed_in?, required: true %>
                  <%= f.hidden_field :restaurant_id, value: @restaurant.id %>

                  <%= f.submit nil, class: 'btn btn-success pull-right #{disabled unless user_signed_in?}'%>
                <% end %>
              </div>

            </div>
          </div>
        </div>

        <div class="restaurant-images col-md-3">
          BBBB
          BBBB
        </div>
      </div>
    </div>
</div>